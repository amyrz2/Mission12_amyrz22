{
    "plugins": ["prettier"],
    "extends": [
        "react-app",
        "plugin:prettier/recommended",
        "prettier", 
        "eslint::recommended"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ]
    }
}

